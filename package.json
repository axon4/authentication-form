{
	"name": "authentication-form",
	"version": "0.0.1",
	"engines": {
		"node": ">=18.9.1"
	},
	"scripts": {
		"start": "concurrently \"pnpm start:server\" \"pnpm start:tailWind\" \"pnpm start:reLoad\"",
		"start:server": "nodemon -w ./ -e css,ts,njk --exec ts-node server/server.ts",
		"start:tailWind": "tailwindcss -w -i server/templates/style.css -o dist/style.css",
		"start:reLoad": "pnpm livereload -w 2500 -e html,css,ts,njk"
	},
	"dependencies": {
		"@fastify/cookie": "^9.2.0",
		"@fastify/formbody": "^7.4.0",
		"@fastify/static": "^6.12.0",
		"concurrently": "^8.0.1",
		"daisyui": "^2.51.6",
		"fastify": "^4.24.3",
		"nunjucks": "^3.2.4",
		"promised-sqlite3": "^2.1.0",
		"sqlite3": "^5.1.6",
		"uuid": "^9.0.1"
	},
	"devDependencies": {
		"@tailwindcss/typography": "^0.5.9",
		"@tsconfig/strictest": "^2.0.1",
		"@types/core-js": "^2.5.5",
		"@types/node": "^20.1.0",
		"@types/sqlite3": "^3.1.11",
		"@types/uuid": "^9.0.7",
		"dotenv": "^16.3.1",
		"livereload": "^0.9.3",
		"nodemon": "^2.0.22",
		"tailwindcss": "^3.3.2",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4",
		"zod": "^3.22.4"
	}
}